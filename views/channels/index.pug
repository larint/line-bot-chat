extends ../layout

block style
  link(href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.css")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.bundle.min.js")
  script(src="javascripts/utils.js")
block content
  h1 
    -var active_menu = 3
    include ../partials/top_menu.pug
  .row
    .col-12
        nav
          .nav.nav-tabs#nav-tab
            a.nav-item.nav-link.active#nav-home-tab(href="#nav-home", data-toggle="tab") Accounts
            a.nav-item.nav-link#nav-profile-tab(href="#nav-profile", data-toggle="tab") Groups
        .tab-content#nav-tabContent
          .tab-pane.fade.show.active#nav-home 
            include account_list.pug
          .tab-pane.fade#nav-profile
            include group_list.pug